<h2>Lista de categorias:</h2>
<hr>
<a href="/admin/categorias/add">
<button class="btn btn-success"> Nova categoria</button>
</a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>
                {{nome}}
            </h4>
            <small>
                Slug: {{slug}}
            </small>
            <br>
            <small>
                Data de criação: {{date}}
            </small>
            <br>
              <table>
                <tr>
                    <td>
                        <a href="/admin/categorias/editar/{{_id}}" class="btn btn-success mt-2"> Editar</a>
                    </td>
                    <td>
                        <form action="/admin/categorias/deletar" method="POST">
                            <input type="hidden" name="id" value="{{_id}}">
                            <button type="submit" class="btn btn-danger mt-2" data-toggle="modal" data-target="#delete-cat"> Deletar </button>
                        </form>
                    </td>
                </tr>
            </table>
        </div>
    </div>
{{else}}
    <h4 class="mt-4">Nenhuma categoria registrada!</h4>
{{/each}}
